<div class="banner">
  <div class="overlay">
    <h1>Arted helps you find the perfect <strong>artwork</strong> from your <strong>local artist</strong>!</h1>
    <p>Discover our artists and their artworks or sell your own creations.</p>
    <%= link_to "Start discovering", artworks_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="grid-container">
  <% @artworks.each do |artwork| %>
    <div class="card">
      <div class="artist-infos">
        <p><%= artwork.user.email %></p>
        <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="avatar-user avatar-bordered" />
      </div>
      <%= link_to artwork_path(artwork) do %>
        <%= cl_image_tag artwork.photos.first.key, height: 300, width: 400, crop: :fill %>
      <% end %>
      <div class="artwork">
        <div class="artwork-infos">
          <h2><%= artwork.title %></h2>
          <p><%= artwork.description %></p>
        </div>
        <h2 class="artwork-pricing"><%= artwork.price %></h2>
      </div>
    </div>
  <% end %>
</div>

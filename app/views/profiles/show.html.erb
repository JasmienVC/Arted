<div class="container my-5">
  <div class="row">
    <div class="col-4">

      <div class="vh-100" style="background-image: url('<%= cl_image_path @profile.photo.key, crop: :fill %>')"></div>
    </div>
    <div class="col-8">
      <h1>Title: <%= @profile.name %></h1>
      <p><%= @profile.bio %></p>
    </div>
  </div>
</div>

<% if policy(@profile).edit? %>
  <%= link_to "Edit your profile", edit_profile_path(@profile) %>
<% end %>

<%= button_to "Delete your profile", @profile, method: :delete if policy(@profile).destroy? %>

<div class="container my-5">
  <div class="row">
    <div class="col-4 jumbotron">
      <h1 class="display-4">Thank you!</h1>
      <p class="lead">We hope you enjoy your new artwork: <strong><%= @transaction.artwork.title %></strong>. With your purchase at Arted, you are supporting up-and-coming artists from all over the world.</p>
      <hr class="my-4">
      <p>Check out more artworks of <%= @transaction.artwork.user.name %> <%= link_to "here", profile_path(@transaction.artwork.user)%>.</p>
      <p class="lead">
        <%= button_to "Back to artworks", artworks_path, class: "btn-arted", data: {turbo: :false}, method: :get%>
      </p>
    </div>
    <div class="col-8">
      <% if @artwork.photos.size > 1 %>
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <div class="carousel-image" style="background-image: url('<%= cl_image_path @artwork.photos.first.key, crop: :fill %>')"></div>
            </div>
            <% @artwork.photos[1..].each do |photo| %>
              <div class="carousel-item">
                <div class="carousel-image" style="background-image: url('<%= cl_image_path photo.key, crop: :fill %>')"></div>
              </div>
            <% end %>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      <% else %>
        <%#= cl_image_tag @artwork.photos.first.key, crop: :fill %>
        <div class="carousel-image" style="background-image: url('<%= cl_image_path @artwork.photos.first.key, crop: :fill %>')"></div>
      <% end %>
    </div>
  </div>
</div>

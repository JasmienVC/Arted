<div class="container my-5">
  <div class="row">
    <div class="col-8">

      <div class="vh-100" style="background-image: url('<%= cl_image_path @artwork.photo.key, crop: :fill %>')"></div>
    </div>
    <div class="col-4">
      <h1>Title: <%= @artwork.title %></h1>
      <p><%= @artwork.description %></p>
      <h4>Price: <%= @artwork.price %>€</h4>
      <h4>Shipping: <%= @artwork.shipping_costs %>€</h4>
    </div>
  </div>
</div>
